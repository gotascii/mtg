<td colspan="7" id="card-<%= card.id %>" class="form-container">
  <% remote_form_for card, :loading => "$('#card-#{card.id}').toggleClass('loading')", :html => {:class => "inline"} do |f| %>
    <%= render "form", :f => f, :card => card, :color => color, :expansions => expansions, :card_types => card_types, :colors => colors, :search => search %>
  <% end %>
</td>