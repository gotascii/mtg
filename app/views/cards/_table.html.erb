<tr>
  <th class="name-heading">Name</th>
  <th class="color-heading">Color</th>
  <th class="expansion-heading">Expansion</th>
  <th class="total-heading">Total</th>
  <th colspan="2">Action</th>
</tr>
<% cards.each do |card| %>
  <tr id="card-<%= card.id %>">
    <%= card_columns(card) %>
    <td><%= card.total %></td>
    <td><%= link_to_remote 'Edit', :url => edit_card_url(card, :color_id => @color.try(:id)), :method => :get %></td>
    <td><%= link_to 'Delete', card_url(card, :color_id => @color.try(:id)), :method => :delete %></td>
  </tr>
<% end %>