<%= hidden_field_tag :color_id, color.try(:id) %>
<%= hidden_field_tag 'search[order]', search.try(:order) %>
<%= f.text_field :name, :class => "name" %>
<%= select_tag 'card[color_ids]', options_from_collection_for_select(colors, 'id', 'name', card.color_ids), {:multiple => true, :size => 3} %>
<%= f.select :expansion_id, options_from_collection_for_select(expansions, 'id', 'abbr', card.expansion_id) %>
<%= f.select :card_type_id, options_from_collection_for_select(card_types, 'id', 'abbr', card.card_type_id) %>
<%= f.text_field :total, :class => 'total' %>
<%= f.submit 'Save', :style => 'display:inline' %>