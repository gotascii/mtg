<div class="deck">
  <h2>
    <span id="deck-info"><%= @deck.to_s %></span>
    <%= link_to 'BUY', deck_shopping_list_url(@deck.id, :format => "txt") %>
    <%= clippy(@deck.shopping_list) %>
    <%= link_to 'LIST', deck_complete_list_url(@deck.id, :format => "txt") %>
    <%= clippy(@deck.complete_list) %>
  </h2>
  <% form_for(@pick) do |f| %>
    <%= render "picks/form", :f => f, :pick => @pick, :colors => @colors, :search => @search %>
  <% end %>
  <table id="picks-table" style="float:left; margin-right: 10px">
    <%= render "picks/table", :picks => @picks, :search => @search, :deck => @deck %>
  </table>
</div>

<div class="deck">
  <h2>SIDEBOARD</h2>
  <% form_for(@sideboard_pick) do |f| %>
    <%= render "picks/form", :f => f, :pick => @sideboard_pick, :colors => @colors, :search => @sideboard_search %>
  <% end %>
  <table id="picks-table">
    <%= render "picks/table", :picks => @sideboard_picks, :search => @sideboard_search, :deck => @deck %>
  </table>
</div>