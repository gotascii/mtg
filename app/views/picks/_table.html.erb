<tr>
  <th><%= pick_order_link(search, :card_name, 'Name', deck) %></th>
  <th class="data">Color</th>
  <th class="data"><%= pick_order_link(search, :card_expansion_abbr, 'Expansion', deck) %></th>
  <th class="data"><%= pick_order_link(search, :total, 'Total', deck) %></th>
  <th class="data"><%= pick_order_link(search, :need, 'Need', deck) %></th>
  <th colspan="2">Action</th>
</tr>
<% picks.each do |pick| %>
  <tr id="pick-<%= pick.id %>">
    <%= card_columns(pick.card) %>
    <td class="data"><%= pick.total %></td>
    <td class="data"><%= pick.need %></td>
    <td><%= link_to_remote 'Edit', :url => edit_pick_url(pick, :search => search.conditions), :method => :get %></td>
    <td><%= link_to 'Delete', pick_url(pick, :search => search.conditions), :method => :delete %></td>
  </tr>
<% end %>